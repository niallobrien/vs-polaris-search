{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "outDir": "out/webview",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler"
  },
  "include": ["webview/**/*", "src/core/types.ts", "src/webview/messageProtocol.ts"],
  "exclude": ["node_modules"]
}
