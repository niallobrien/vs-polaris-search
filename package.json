{
  "name": "vscode-polaris",
  "displayName": "Polaris Search",
  "description": "Fast, beautiful search and replace for VS Code",
  "version": "0.1.0",
  "publisher": "polaris",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "search",
    "find",
    "replace",
    "ripgrep",
    "fuzzy"
  ],
  "activationEvents": [
    "onCommand:polaris.findFiles",
    "onCommand:polaris.findInFiles"
  ],
  "main": "./dist/extension.js",
  "icon": "media/polaris-icon.png",
  "contributes": {
    "commands": [
      {
        "command": "polaris.findFiles",
        "title": "Polaris: Find Files",
        "category": "Polaris"
      },
      {
        "command": "polaris.findInFiles",
        "title": "Polaris: Find in Files",
        "category": "Polaris"
      }
    ],
    "keybindings": [
      {
        "command": "polaris.findFiles",
        "key": "ctrl+alt+p",
        "mac": "cmd+alt+p",
        "win": "ctrl+alt+p",
        "linux": "ctrl+alt+p"
      },
      {
        "command": "polaris.findInFiles",
        "key": "ctrl+alt+f",
        "mac": "cmd+alt+f",
        "win": "ctrl+alt+f",
        "linux": "ctrl+alt+f"
      }
    ],
    "configuration": {
      "title": "Polaris Search",
      "properties": {
        "polaris.theme": {
          "type": "string",
          "default": "system",
          "enum": [
            "system",
            "tokyonight",
            "everforest",
            "ayu",
            "catppuccin",
            "catppuccin-macchiato",
            "gruvbox",
            "kanagawa",
            "nord",
            "matrix",
            "one-dark",
            "github-dark",
            "github-light",
            "dracula",
            "solarized-dark",
            "solarized-light"
          ],
          "description": "Syntax highlighting theme for preview pane"
        },
        "polaris.previewLines": {
          "type": "number",
          "default": 10,
          "minimum": 3,
          "maximum": 50,
          "description": "Number of context lines to show in preview"
        },
        "polaris.liveSearchDelay": {
          "type": "number",
          "default": 300,
          "minimum": 100,
          "maximum": 2000,
          "description": "Delay in milliseconds before live search triggers"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "node esbuild.js --production",
    "watch": "node esbuild.js --watch",
    "compile": "tsc -noEmit",
    "compile:webview": "tsc -p tsconfig.webview.json -noEmit",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "esbuild": "^0.19.0",
    "eslint": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.44",
    "file-icons-js": "^1.1.0",
    "fuzzysort": "^2.0.4",
    "shiki": "^1.0.0",
    "vscode-icons-js": "^11.6.1"
  }
}
